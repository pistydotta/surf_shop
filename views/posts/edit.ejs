<% layout('layouts/boilerplate') -%>
<h1>Edit Post</h1>

<form action="/posts/<%= post.id %>?_method=PUT" method="POST" id="postEditForm" enctype="multipart/form-data">
    <div><input name="post[title]" type="text" value="<%=post.title %>"></div>
    <div><input name="post[price]" type="text" value="<%=post.price %>"></div>
    <div>
        <input type="file" accept="images/*" name="images" id="imageUpload" multiple>
        <div>
            <% post.images.forEach(function(image, i){ %>

            <img src="<%=image.url%>" width="200px" />
            <label for="image<%= i %>">Delete?</label>
            <input type="checkbox" name="deleteImages[]" class="imageDeleteCheckbox" id="image<%= i %>"
                value="<%= image.public_id %>">
            <% }) %>
        </div>
    </div>
    <div><textarea name="post[description]"><%= post.description %></textarea></div>
    <div><input name="post[location]" type="text" value="<%=post.location %>"></div>
    <input type="submit">
</form>

<script src='/javascripts/post-edit.js'></script>